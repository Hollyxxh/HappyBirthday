    }
    .gift-box {
      width: 150px;
      height: 150px;
      background: url('https://cdn-icons-png.flaticon.com/512/1055/1055646.png') no-repeat center/contain;
      cursor: pointer;
      margin-bottom: 20px;
    }
    .hidden {
      display: none;
    }
    .gift-cards {
      margin-top: 20px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
    }
    .card {
      width: 120px;
      height: 120px;
      background: url('https://cdn-icons-png.flaticon.com/512/1055/1055646.png') no-repeat center/contain;
      border-radius: 10px;
      cursor: pointer;
      transition: transform 0.4s;
    }
    .card.opened {
      transform: scale(1.5);
